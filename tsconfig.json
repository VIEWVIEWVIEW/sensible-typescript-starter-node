{
  "compilerOptions": {
    "target": "es2018",
    "lib": [
      "es2018"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "noEmitOnError": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "useDefineForClassFields": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "outDir": "dist",
    "pretty": true
  },
  "exclude": [
    "node_modules",
    "dist",
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
  ]
}